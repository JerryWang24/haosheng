/**index.wxss**/
page{
    overflow-x:hidden;
}
.swiper-container{
  width: 100%;
  margin:30rpx 0;
  position: relative;
}
swiper {
  width:100%;
  height: 340rpx;
}
swiper swiper-item{
  box-sizing: border-box;
  /* padding:10rpx; */
}
.le-img {
  width: 100%;
  height: 100%;
  display: block;
  transform: scale(0.91);
  transition: all 0.4s ease;
  border-radius: 20rpx;
}
.le-img.le-active {
  transform: scale(1);
  /* box-shadow: 0 0 10rpx rgb(150, 140, 140); */
}
.swiper-container .dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: -35rpx;
  display: flex;
  justify-content: center;
}
.swiper-container .dots .dot{
  margin: 0 17rpx;
  width: 16rpx;
  height: 16rpx;
  background: #ECECEC;
  border-radius: 100%;
  transition: all .6s;
}
.swiper-container .dots .dot.active{
  background: #DDC79B;
}
.btn-banner{
    width: 100%;
    margin-top: 30rpx;
    position: relative;
}
.btn-banner image{
    width: 100%;
}
.com-circle-org{
    width:200rpx;
    height: 70rpx;
    line-height: 70rpx;
    background: #BBA16C;
    border-radius: 70rpx;
    text-align: center;
    color: #fff;
    position: absolute;
    right: 69rpx;
    top:45%;
    transform: translateY(-50%);
    font-size: 32rpx;
    box-shadow: 0 5rpx 10rpx rgb(206, 182, 134);
}
.vedio-box{
    width: 100%;
}
.scroll-view{
    height: 380rpx;
    width:100%;
    overflow: hidden;
}
.scroll-view .big-box{
    display: flex;
    flex-wrap: nowrap;
}
.scroll-view .item-box{
    background: #fff;
    box-shadow:0px 5rpx 9rpx 1rpx rgba(78,78,78,0.1);
    flex:0 0 400rpx;
    border-radius: 20rpx;
    margin-left: 20rpx;
    overflow: hidden;
}
.scroll-view .item-box image{
    width: 100%;
    height: 300rpx;
}
.scroll-view .item-box text{
    width: 100%;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding:10rpx 35rpx 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #333;

}
.article-big-box{
    width: 100%;
}
.article-box{
    width: 94%;
    margin:0 auto;
}
.article-box .item-box{
    background: #fff;
    box-shadow:0px 5rpx 9rpx 1rpx rgba(78,78,78,0.1);
    border-radius: 20rpx;
    padding:27rpx 35rpx 19rpx;
    width: 100%;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}
.article-box .item-box .title{
    font-size:28rpx;
    font-weight:bold;
    color:rgba(51,51,51,1);
    line-height:42rpx;
    width: 100%;
}
.article-box .item-box.hasImg .title{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.article-box .item-box .img-box{
    display: flex;
    margin-top: 19rpx;
    margin-bottom: 5rpx;
    overflow: hidden;
}
.article-box .item-box .img-box image{
    flex: 0 0 48.2%;
    height: 206rpx;
}
.article-box .item-box .img-box image:first-child{
    margin-right: 22rpx;
}
.article-box .item-box .info-box{
    margin-top: 15rpx;
    display: flex;
    font-size: 22rpx;
}
.article-box .item-box .info-box .btn{
    padding:0 15rpx;
    height:30rpx;
    line-height: 30rpx;
    background:linear-gradient(45deg, rgba(221,199,155,1) 0%,rgba(251,239,219,1) 100%);
    border-radius:30rpx;
    font-size:20rpx;
    font-family:PingFang-SC-Regular;
    font-weight:400;
    color:rgba(51,51,51,1);
    margin-right: 21rpx;
}
.article-box .item-box .info-box .date{
    margin:0 40rpx 0 0;
    color:#333;
}
.article-box .item-box .info-box .from{
    color:#999;
}
.article-box .item-box.hasImgR{
    padding-right: 290rpx;
    position: relative;
    min-height: 194rpx;
    box-sizing: border-box;
}
.article-box .item-box.hasImgR image{
    height: 156rpx ;
    width: 210rpx;
    position: absolute;
    top:17rpx;
    right: 20rpx;
}
.article-box .item-box.hasImgR .title{
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 28rpx;
}
.article-box .item-box.hasImgR .from{
    color:#999;
    font-size: 22rpx;
    padding-top: 4rpx;
}
.article-box .item-box.hasImgR .info-box{
    position: absolute;
    left: 31rpx;
    bottom: 13rpx;
}
.cslta-big-box{
    width: 100%;
}
.cslta-box{
    width: 94%;
    margin:0 auto 40rpx;
    display: flex;
    flex-wrap: wrap;
}
.cslta-box .item-box{
    width:48.5%;
    margin:0 0 22rpx 0;
    box-shadow:0px 5rpx 9rpx 1rpx rgba(78,78,78,0.1);
    border-radius:20rpx;
    padding:20rpx 23rpx 0;
    box-sizing: border-box;
    display: block;
    float: left;
    height: 248rpx;
    position: relative;
}
.cslta-box .item-box:nth-child(2n){
    margin:0 0 22rpx 20rpx;
    
}
.cslta-box .item-box .info-box{
    display: flex;
    width: 100%;
}
.cslta-box .item-box .info-box image{
    flex: 0 0 116rpx;
    height: 116rpx;
    border-radius: 100%;
    margin-right: 20rpx;
}
.cslta-box .item-box .info-box .right-box{
    flex: 0 0 160rpx;
}
.cslta-box .item-box .info-box .right-box .name{
    color: #333;
    font-size: 28rpx;
    font-weight: bold;
    padding-bottom: 4rpx;
}
.cslta-box .item-box .info-box .right-box .p{
    color: #333;
    font-size: 22rpx;
    line-height: 32rpx;
}
.cslta-box .item-box  .btn{
    width: 90%;
    height:60rpx;
    line-height: 60rpx;
    background:linear-gradient(45deg, rgba(221,199,155,1) 0%,rgba(251,239,219,1) 100%);
    border-radius:60rpx;
    font-size:28rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
    text-align: center;
    position: absolute;
    left: 5%;
    bottom: 13rpx;
}
.cslta-box .item-box.gupiao .info-box .right-box .name{
    font-size: 34rpx;
}